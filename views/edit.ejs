<%- include('partials/header') %>

<h1 class="edit-page-title">Edit Post</h1>

<% if (errorMessage) { %>
  <div class="edit-alert-error"><%= errorMessage %></div>
<% } %>

<% if (successMessage) { %> 
  <div class="edit-alert-success"><%= successMessage %></div> 
<% } %>

<form action="/posts/<%= post.id %>/edit" method="POST" class="edit-form">
  <div class="edit-form-group">
    <label for="edit-title">Title</label>
    <input type="text" id="edit-title" name="title" value="<%= post.title %>" required class="edit-input-field">
  </div>

  <div class="edit-form-group">
    <label for="edit-content">Content</label>
    <textarea id="edit-content" name="content" required class="edit-textarea-field"><%= post.content %></textarea>
  </div>
  
  <div class="edit-form-actions">
    <button type="submit" class="edit-btn-update">Save</button>
    <a href="/posts/<%= post.id %>" class="edit-btn-cancel">Cancel</a>
  </div>
</form>

<%- include('partials/footer') %>
