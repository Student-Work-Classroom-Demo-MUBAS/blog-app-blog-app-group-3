<!-- Link to external stylesheet -->
<link rel="stylesheet" href="/css/style.css">

<!-- Footer section -->
<footer class="footer">
  <div class="footer-container">
    
    <!-- Branding and tagline -->
    <div class="footer-branding">
      <h2>Group Three Blog</h2>
      <p class="tagline">Sharing ideas, stories, and inspiration one post at a time.</p>
    </div>

    <!-- Social media links with icons -->
    <nav class="social-links" aria-label="Social media">
      <ul>
        <li>
          <a href="https://twitter.com" target="_blank" title="Visit Twitter">
            <img src="/images/twitter-icon.png" alt="Twitter icon" class="social-icon">
            Twitter
          </a>
        </li>
        <li>
          <a href="https://facebook.com" target="_blank" title="Visit Facebook">
            <img src="/images/facebook-icon.png" alt="Facebook icon" class="social-icon">
            Facebook
          </a>
        </li>
        <li>
          <a href="https://instagram.com" target="_blank" title="Visit Instagram">
            <img src="/images/instagram-icon.png" alt="Instagram icon" class="social-icon">
            Instagram
          </a>
        </li>
      </ul>
    </nav>

  
  <!-- Newsletter section -->
    <div class="newsletter">
      <h3 class="newsletter-title">Stay Updated</h3>
      <p class="newsletter-text">Get our latest posts and insights straight to your inbox.</p>
      <form class="newsletter-form">
        <input type="email"
              placeholder="Enter your email"
              aria-label="Email address"
              required>
        <button type="submit">Subscribe</button>
      </form>
    </div>


    <!-- Copyright -->
    <p class="copyright">&copy; <%= new Date().getFullYear() %> Group Three Blog. All rights reserved.</p>
  </div>
</footer>

<script src="/js/script.js" defer></script>
</body>
</html>
